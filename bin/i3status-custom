#!/usr/bin/env bash

i3status-switch | while :
do
    read -r line
    prefix=''
    if [[ "$line" == ","* ]]; then
        line="${line:1}"
        prefix=','
    fi
    if [[ "$line" == "[{"* ]]; then
        ARTIST_TITLE="ï†¼ $(spotify-ctrl currently-playing)"

        state="$(spotify-ctrl state)"
        case "$state" in
          "Playing") COLOR="#1DB951" ;;
          *)         COLOR="#FFFFFF" ;;
        esac

        export COLOR
        export ARTIST_TITLE

        out=$(echo "$line" | jq -c '. |= [{ name: "spotify", markup: "none", "color": env.COLOR, "full_text": env.ARTIST_TITLE }] + .')
        echo "${prefix}${out}"
    else
        echo "${prefix}${line}" || exit 1
    fi
done

