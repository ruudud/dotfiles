#!/usr/bin/env bash
# Finds hex color code of pixel under mouse cursor and copies to clipboard
# Requires imagemagic

eval "$(xdotool getmouselocation --shell)" # Exports X and Y vars

xwd -silent -root |\
  convert xwd:- -crop "1x1+${X}+${Y}" txt:- |\
  tail -n 1 |\
  awk '{print $3}' |\
  xclip -sel clip
