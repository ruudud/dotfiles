[include]
  path = ~/.gitconfig-local
[color]
  ui = auto
[core]
  editor = vim
  autocrlf = input
  excludesfile = ~/.gitignore
  whitespace = tab-in-indent,blank-at-eof
[alias]
  unstage = reset HEAD --
  s = status
  co = checkout
  br = branch
  t = describe --abbrev=0
  lg = log --graph --pretty=oneline --abbrev-commit
  w = whatchanged --pretty=short --abbrev-commit
  gd = log --decorate --cherry-mark --oneline --graph --boundary #$A"..."$B
  review = difftool -y -t vimdiff origin/master..#$A
  diffs = diff --staged
  rank = shortlog -sn --no-merges
  praise = blame
[difftool "vimdiff"]
  cmd = "vimdiff -c 'windo set wrap'"
[merge]
  tool = opendiff
[filter "tabspace"]
  clean = expand -t2
[push]
  default = simple
[branch]
  autosetuprebase = always
[help]
  # Automatically correct and execute mistyped commands
  autocorrect = 1
